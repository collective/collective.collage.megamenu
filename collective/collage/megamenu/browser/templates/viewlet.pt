<tal:viewlet
    define="folder nocall:view/menufolder">
    
<dl class="portalMessage warning"
    tal:condition="view/testing|python:False">
    <dt i18n:domain="plone" i18n:translate="">Info</dt>
    <dd i18n:translate="">
        This is not the current megamenu, but a test preview of "<span tal:replace="folder/Title" i18n:name="title">title</span>" as a possible megamenu folder. If you like it, you can 
            <a href="" tal:attributes="href string:${folder/absolute_url}/@@menu-set-current" i18n:name="link">
                set it as the new current megamenu folder
            </a>.
    </dd>
</dl>


<tal:megamenu 
    define="menu nocall:view/menufolder"
    condition="view/has_megamenu"
    content="structure menu/@@menu-renderer|nothing" />

</tal:viewlet>
